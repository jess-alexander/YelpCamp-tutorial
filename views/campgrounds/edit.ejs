<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 style = "text-align:center;">Create A New Campground</h1>
<!-- remove styling and place in .css file -->        
        <div style ="width: 40%; margin: 35px auto;">
<!-- remove styling and place in .css file -->            
            <form action = "/campgrounds/<%=campground._id%>/edit?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class = "form-control" type = "text" name = "name" placeholder = "<%= campground.name %>" >
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "image" placeholder = "<%= campground.image %>">
                </div>
                <div class = "form-group">
                    <textarea class = "form-control" name = "description" placeholder = "<%= campground.description %>" rows = "4" ></textarea>
                </div>
                <div class = "form-group">
                    <button class = "btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
              <a href = "/campgrounds">Back to Campgrounds</a>
            <% include ../partials/footer %>
        </div> <!-- styling -->
    </div> <!-- row -->
</div><!-- container -->
