<% include ../partials/header %>

<div class = "container">
    <div class = "row">
        <h1 class="new-edit" >Edit Comment </h1>        <!-- classes added for styling -->
        <div class = "new-edit form-wrapper" >  <!-- classes added for styling -->
            <form action = "/campgrounds/<%= campground_id%>/comments/<%=comment._id%>/?_method=PUT" method = "post">
                <div class="form-group">
                    <input class = "form-control" type = "text" name = "comment[text]" value = "<%=comment.text%>" >
                </div>
              
                <div class = "form-group">
                    <button class = "btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
              <a href = "/campgrounds">Back to Campgrounds</a>
            <% include ../partials/footer %>
        </div> <!-- styling -->
    </div> <!-- row -->
</div><!-- container -->