<% include ../partials/header %>

<div class = "container">
    <div class = "centered-form">
        <h1>Add New Comment to <%=campground.name%></h1>
        <form action = "/campgrounds/<%= campground._id%>/comments" method = "post">
            <div class="form-group">
                <input class = "form-control" type = "text" name = "comment[text]" placeholder = "comment" >
            </div>
          
            <div class = "form-group">
                <button class = "btn btn-large btn-primary btn-block">Submit</button>
            </div>
        </form>
          <a href = "/campgrounds">Back to Campgrounds</a>
    </div> <!-- row -->
    <% include ../partials/footer %>
</div><!-- container -->